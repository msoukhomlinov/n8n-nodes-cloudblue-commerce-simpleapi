{
  "compilerOptions": {
    "lib": ["es2019", "es2020", "es2021"],
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["src/**/*", "credentials/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
} 